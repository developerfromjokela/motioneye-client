<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.FullCameraViewer"
    android:animateLayoutChanges="true"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">



        <LinearLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="gone">

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/loading"
                android:textSize="24sp" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/tryagain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="@string/try_again"
                android:visibility="gone" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/cameraFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible">

            <com.ortiz.touchview.TouchImageView
                android:id="@+id/cameraFullImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitCenter"
                tools:src="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:id="@+id/bottomBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cameraFullImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0"
                android:background="#D6787C78"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cameraFPS"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="9dp"
                        android:layout_weight="0"
                        android:gravity="center_horizontal|center_vertical"
                        android:minWidth="29dp"
                        android:text="0 fps"
                        android:textSize="18sp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/actions"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:scrollbars="horizontal">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dircontrols"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/up"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:contentDescription="@string/up"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_up"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/lrlayout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="0"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        tools:visibility="visible">

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/left"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginRight="25dp"
                            android:contentDescription="@string/left"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_back"
                            tools:visibility="visible" />


                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/right"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginLeft="25dp"
                            android:contentDescription="@string/right"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_right"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/down"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="0"
                        android:contentDescription="@string/down"

                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_down"
                        tools:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:background="#D6787C78"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/cameraName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="0"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="CamName"
                    android:textSize="18sp" />
            </LinearLayout>

        </RelativeLayout>

</LinearLayout>


