<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        android:layout_width="match_parent"
        android:title="@string/motioneye_settings">

        <android.support.v7.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="advancedSettings"
            android:enabled="false"

            android:title="@string/advanced_settings" />
        <Preference
            android:key="admin_username"
            android:enabled="false"
            android:summary="username"
            android:title="@string/admin_username" />
        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"

            android:key="admin_password"
            android:summary="*****"
            android:title="@string/admin_password" />
        <Preference
            android:key="surv_username"
            android:summary="username"
            android:enabled="false"

            android:title="@string/surv_username" />
        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:key="surv_password"
            android:summary="*****"
            android:title="@string/surv_password" />

        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="motionEyeVersion"
            android:summary="v0.0"
            android:title="@string/motioneye_version"
            app:isPreferenceVisible="false" />

        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="motionVersion"
            android:summary="v0.0"
            android:title="@string/motion_version"
            app:isPreferenceVisible="false" />

        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="OSVersion"
            android:summary="LinuxDistro 0.0"
            android:title="@string/os_version"
            app:isPreferenceVisible="false" />

        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="reboot"
            android:summary="@string/reboot_summary"
            android:title="@string/reboot"
            app:isPreferenceVisible="false" />
        <Preference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="shutdown"
            android:summary="@string/shutdown_summary"
            android:title="@string/shutdown"
            app:isPreferenceVisible="false" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/network_settings">

        <Preference
            android:key="ip_addr"
            android:summary="@string/local_hostame_summary"
            android:title="@string/local_hostname" />
        <Preference
            android:key="ddns_addr"
            android:summary="@string/local_hostame_summary"
            android:title="@string/ddns_hostname" />
        <Preference
            android:key="port"
            android:summary="@string/local_port_summary"
            android:title="@string/optional_local_port" />

        <Preference
            android:key="ddns_port"
            android:summary="@string/optional_ddns_port_summary"
            android:title="@string/optional_ddns_port" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/other_settings">

        <CheckBoxPreference
            android:key="open_by_default"
            android:summary="@string/open_by_default_desc"
            android:title="@string/open_by_default" />

    <Preference
        android:key="delete_camera"
        android:summary="@string/delete_camera_summary"
        android:title="@string/delete_camera" />




    </PreferenceCategory>
</PreferenceScreen>